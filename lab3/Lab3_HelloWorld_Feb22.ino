#include <FastLED.h>

#define NUM_LEDS 21  
#define DATA_PIN 11
#define BRIGHTNESS 100
#define DELAY 100  

CRGB leds[NUM_LEDS];

void setup() {
  FastLED.addLeds<WS2812B, DATA_PIN, GRB>(leds, NUM_LEDS);
  FastLED.setBrightness(BRIGHTNESS);
}

void loop() {
  showLetter(H);
  showLetter(E);
  showLetter(L);
  showLetter(L);
  showLetter(O);
  showLetter(W);
  showLetter(O);
  showLetter(R);
  showLetter(L);
  showLetter(D);
}

void showColumn(uint32_t col) {
  for (int i = 0; i < NUM_LEDS; i++) {
    if (col & (1UL << i))
      leds[i] = CRGB::Green;
    else
      leds[i] = CRGB::Black;
  }
  FastLED.show();
  delay(DELAY);
}

void showLetter(const uint32_t bitmap[]) {
  for (int c = 0; c < 8; c++) {
    showColumn(bitmap[c]);
  }
  delay(2*DELAY)
}

